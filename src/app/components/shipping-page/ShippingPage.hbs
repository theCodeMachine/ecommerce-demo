<div class="shippingpage">
    <div class="shippingpage__header">
    </div>
    <div class="container">
        <div class="start-xs row">
            <div class="col-xs-6">
                <div class="box">
                    <h2>{{storename}}</h2>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <br><br>
    <div class="container">
        <div class="row">
            <div class="box">
                <h2>Selected Product</h2>
            </div>
        </div>
        <div class="row around-xs middle-xs shippingpage__boxborder">
            <div class="col-xs-2">
                <div class="box">
                    <div class="shippingpage__img-cont {{color}}"></div>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="row ">
                    <div class="box">
                        <div>
                            <h3>{{pname}} ({{color}})</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1">
                <div class="row">
                    <div class="box">
                        <div>
                            <h3>{{ssize}}</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1">
                <div class="row center-xs">
                    <div class="box">
                        <div>
                            <h3>{{sqty}}</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1">
                <div class="row center-xs">
                    <div class="box">
                        <div>
                            <h3>${{poffer}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br>
        <hr/>
        <br>
        <div class="row">
            <div class="box">
                <h2>Shipping Address:</h2>
            </div>
        </div>
        <div class="row middle-xs">
            <div class="col-xs-4">
                <label for="addr1">Address 1</label><br>
                <input type="text" name="addr1" autofocus id="addr1" placeholder="Address 1"/>
            </div>
            <div class="col-xs-4">
                <label for="addr2">Address 2</label><br>
                <input type="text" name="addr2" id="addr2" placeholder="Address 2 (Optional)"/>
            </div>
        </div>
                <div class="row middle-xs">
            <div class="col-xs-4">
                <label for="city">City</label><br>
                <input type="text" name="city" id="city" placeholder="City"/>
            </div>
            <div class="col-xs-4">
                <label for="state">State</label><br>
                <input type="text" name="state" id="state" placeholder="State"/>
            </div>
        </div>
        <div class="row middle-xs">
            <div class="col-xs-4">
                <label for="zip">Zip Code</label>
                <input type="text" name="zip" id="zip" placeholder="Zip"/>
            </div>
        </div>
        <br>
        <div class="row middle-xs">
            <div class="col-xs-4">
                <button id="finish" disabled>Finish</button>
            </div>
        </div>
    </div>
</div>