<div class="productpage">
    <div class="productpage__header">
    </div>
    <div class="container">
        <div class="start-xs row">
            <div class="col-xs-6">
                <div class="box">
                    <h2>{{storename}}</h2>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <br><br>
    <div class="container">
        <div class="row top-xs">
            <div class="col-xs-6">
                <div class="row center-xs">
                    <div class="col-xs-9">
                        <div class="productpage__img-cont {{color}}"></div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="row start-xs">
                    <div class="col-xs-8">
                        <div class="box">
                            <div class="row">
                                <div class="box">
                                    <h3>{{pname}}</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <p>{{pdesc}}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <p><b>Now ${{poffer}} </b><span>Orig. ${{poriginal}}</span></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <h3>EXTRA 30% OFF USE: FRIEND</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <h3>FREE SHIP AT $25</h3>
                                </div>
                            </div>
                            <hr/>
                            <div class="row">
                                <div class="box">
                                    <p>Color: <b>{{color}}</b></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <!-- Colors -->
                                    <select id="dcolor">
                                        <option value="black" selected>Black</option>
                                        <option value="blue" >Blue</option>
                                        <option value="red" >Red</option>
                                        <option value="green" >Green</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <p>Size:</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <!-- Sizes -->
                                    <select id="dsize">
                                        <option value="XS" selected>XS</option>
                                        <option value="S" >S</option>
                                        <option value="M" >M</option>
                                        <option value="L" >L</option>
                                        <option value="XL" >XL</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <p>Qty:</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <!-- Qty -->
                                    <select id="dqty">
                                        <option value="1" selected>1</option>
                                        <option value="2" >2</option>
                                        <option value="3" >3</option>
                                        <option value="4" >4</option>
                                        <option value="5" >5</option>
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="box">
                                    <button id="next">Next</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>