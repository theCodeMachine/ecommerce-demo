<div class="shippingpage">
    <div class="shippingpage__header">
    </div>
    <div class="container">
        <div class="start-xs row">
            <div class="col-xs-6">
                <div class="box">
                    <h2>{{storename}}</h2>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <br><br>
    <div class="container">
        <div class="row">
            <div class="box">
                <h2>Selected Product</h2>
            </div>
        </div>
        <div class="row around-xs middle-xs shippingpage__boxborder">
            <div class="col-xs-2">
                <div class="box">
                    <div class="shippingpage__img-cont {{color}}"></div>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="row ">
                    <div class="box">
                        <div>
                            <h3>{{pname}} ({{color}})</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1">
                <div class="row">
                    <div class="box">
                        <div>
                            <h3>{{ssize}}</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1">
                <div class="row center-xs">
                    <div class="box">
                        <div>
                            <h3>{{sqty}}</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1">
                <div class="row center-xs">
                    <div class="box">
                        <div>
                            <h3>${{poffer}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br>
        <hr/>
        <br>
        <div class="row">
            <div class="box">
                <h2>Shipping Information:</h2>
            </div>
        </div>
        <div class="row middle-xs">
            <div class="col-xs-4">
                <div class="row ">
                    <div class="box">
                        <div>
                            <h4>Rahul Luthra</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row middle-xs">
            <div class="col-xs-4">
                <div class="row ">
                    <div class="box">
                        <div>
                            <h4>{{shipping.addr1}}, {{shipping.addr2}}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row middle-xs">
            <div class="col-xs-4">
                <div class="row">
                    <div class="box">
                        <div>
                            <h4>{{shipping.city}}, {{shipping.state}} - {{shipping.zip}}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>